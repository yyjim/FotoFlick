{
  "manifest_version": 2,
  "name": "Phlickr @Y!Hack'13",
  "version": "0.2",
  "description": "Phlickr helps to upload images you love",
  "icons": {
    "48" : "images/sample-48.png",
    "128" : "images/sample-128.png"
  },
  "permissions": [
    "activeTab",
    "http://phlickr.herokuapp.com/"
  ],
  "web_accessible_resources": [
    "js/*",
    "css/*",
    "images/*"
  ],
  "browser_action": {
    "default_title": "Phlickr",
    "default_icon": "images/sample-48.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["js/popup.js"]
  },
  "content_scripts": [
    {
      // Load related libs when page loaded and lets see if they worked
      "matches": ["http://*/*"],
      "js" : ["js/jquery-1.9.1.js", "js/jquery.transit.js", "js/jquery-ui-1.10.3.custom.min.js", "js/phlickr.js"],
      "css" : ["css/phlickr_inject.css"]
    }
  ]
}